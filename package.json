{
  "name": "b2note-api",
  "version": "4.0.0",
  "build": "1",
  "description": "B2NOTE server",
  "private": true,
  "scripts": {
    "generate": "scripts/generateSchemas.sh",
    "watch": "nodemon --watch app --watch public/dist --ext ts,js --exec npm run build \\&\\& npm run start",
    "watch-static": "npx webpack --mode development --watch",
    "build": "rm -rf dist/*; npx ttsc && npm run copy",
    "build-static": "rm -rf public/dist/*; npx webpack --mode production",
    "build-all": "rm -rf dist/*; npm run build-static && npx ttsc && npm run copy",
    "copy": "cp -rv .env public dist/",
    "start": "cd dist; node -r dotenv/config server",
    "deploy": "scripts/git-tag.sh; scripts/docker-build.sh; scripts/docker-tag.sh; scripts/docker-push.sh",
    "docker-run": "docker-compose up --build",
    "docker-watch": "nodemon --watch app --ext ts,js,ejs,yaml,html --exec npm run build\\;npm run copy\\;npm run docker-run",
    "clean": "npm cache clean --force"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.165",
    "@types/mongodb": "^3.5.34",
    "@types/morgan": "^1.9.2",
    "@types/n3": "^1.4.4",
    "@types/node": "^14.14.10",
    "@types/passport": "^1.0.4",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/pegjs": "^0.10.2",
    "@types/source-map-support": "^0.5.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "api-spec-converter": "^2.11.2",
    "copy-webpack-plugin": "^6.3.2",
    "eslint": "^7.14.0",
    "nodemon": "^2.0.6",
    "ts-json-schema-generator": "^0.79.0",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@babakness/exhaustive-type-checking": "^0.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "ajv": "^6.12.6",
    "axios": "^0.21.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "immutability-helper": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.3",
    "morgan": "^1.10.0",
    "n3": "^1.6.4",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pegjs": "^0.10.0",
    "qs": "^6.9.4",
    "source-map-support": "^0.5.19",
    "ts-enum-util": "^4.0.2",
    "ts-transformer-keys": "^0.4.2",
    "uuid": "^8.3.1",
    "xmlbuilder": "^15.1.1"
  }
}
