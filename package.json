{
  "name": "b2note-server",
  "version": "3.1.0",
  "description": "B2NOTE server",
  "private": true,
  "scripts": {
    "generate": "scripts/generateSchemas.sh",
    "watch": "nodemon --watch app --ext ts,js --exec npm run build\\; npm run start",
    "build": "rm -rf dist/*; tsc && npm run copy",
    "copy": "cp -rv .env public dist/",
    "start": "cd dist; node -r dotenv/config server",
    "docker-build": "docker-compose build; docker image prune -f",
    "docker-tag": "docker tag b2note/b2note-api b2note/b2note-api:3.1.0",
    "docker-push": "docker push b2note/b2note-api",
    "docker-deploy": "npm run docker-build && npm run docker-tag && npm run docker-push",
    "docker-run": "docker-compose up --build",
    "docker-watch": "nodemon --watch app --ext ts,js,ejs,yaml,html --exec npm run build\\;npm run copy\\;npm run docker-run",
    "clean": "npm cache clean --force"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.5.2",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.3",
    "@types/passport": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.34",
    "@types/pegjs": "^0.10.1",
    "@types/source-map-support": "^0.5.1",
    "@types/uuid": "^7.0.2",
    "api-spec-converter": "^2.11.0"
  },
  "dependencies": {
    "@babakness/exhaustive-type-checking": "^0.1.3",
    "ajv": "^6.12.0",
    "axios": "^0.19.2",
    "chalk": "^3.0.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.5",
    "morgan": "^1.10.0",
    "openid-client": "^3.14.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth": "^1.0.0",
    "pegjs": "^0.10.0",
    "source-map-support": "^0.5.16",
    "uuid": "^7.0.2",
    "xmlbuilder": "^15.0.0"
  }
}
